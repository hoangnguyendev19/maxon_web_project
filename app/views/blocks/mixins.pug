mixin headerMenuItem(href, title) 
	li.header-menu-item 
		a.header-menu-link(href= href)= title

mixin blockBox(title, heading)
	.feature-top 
		span.feature-title= title
		h2.feature-heading= heading

mixin featureItem(src, caption, desc, nameClass)
	.feature-item
		.feature-item-icon(class= nameClass)
			img.feature-item-image(src= src, alt="")
		h3.feature-item-caption= caption
		p.feature-item-desc= desc

