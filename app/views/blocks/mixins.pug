					a.work-content-link(href="#") Learn More
						i.work-content-icon.fas.fa-long-arrow-alt-right
				.work-image(class= reverseImage) 
					img.work-img(src= src, alt="")

mixin factsItem(src, number, desc)
	.facts-item 
		.facts-item-image 
			img.facts-item-logo(src= src, alt="") 
		.facts-item-info 
			h2.facts-item-number= number
			span.facts-item-desc= desc

mixin teamItem(src, name) 
	.team-item 
		img.team-item-image(src= src, alt="")
		h3.team-item-name= name
		span.team-item-job Software developer
		.team-item-social 
			a.team-item-link(href="#") facebook 
			a.team-item-link(href="#") twitter 
			a.team-item-link(href="#") skype 

